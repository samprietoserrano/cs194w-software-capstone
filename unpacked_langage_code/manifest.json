{
  "name": "LanGage Learning v3.1",
  "version": "1.3.1",
  "manifest_version": 3,
  "description": "Real-time translations of the content you're consuming.",
  "background": {
    "service_worker": "background.bundle.js",
    "type": "module"
  },
  "action": {
    "default_icon": {
      "48": "images/icon48.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["contentscript/index.bundle.js"],
      "css": ["contentscript/langage.css"],
      "all_frames": false
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "icons": {
    "48": "images/icon48.png"
  }
}